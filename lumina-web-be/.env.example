# MongoDB Connection String
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGODB_URI=


# Server Port (Azure will override this)
# Default: 8080
PORT=


# Frontend Origin (for CORS)
# Example: http://localhost:3000 or https://lumina-frontend.azurewebsites.net
FRONTEND_ORIGIN=


# Node Environment
# Options: development, production
NODE_ENV=


# ===========================================
# Telegram Bot Configuration
# ===========================================


# Telegram Bot Token (REQUIRED for Telegram integration)
# Obtain from @BotFather on Telegram: https://t.me/botfather
# Format: 123456789:ABCDefGhIJKlmNoPQRsTUVwxyZ
TELEGRAM_BOT_TOKEN=


# Telegram API URL (OPTIONAL)
# Default: https://api.telegram.org/bot
# Only change if using a custom Telegram Bot API server
TELEGRAM_API_URL=https://api.telegram.org/bot


